@page
@model WebRazor_Udemy_Proj.Pages.Categories.DeleteModel


<form method="post">
    <input asp-for="Category.Id" hidden /> 
    <div class="border p-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        @*  <div asp asp-validation-summary="ModelOnly"></div> *@
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-1"></label>
            <input asp-for="Category.Name" disabled class="form-control" />
            
        </div>
        <div class="mb-3row p-1">
            <label asp-for="Category.DisplayOrder" class="p-1"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />
            
        </div>


        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" asp-action="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>


